<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
    <title>My rating and review</title>
    <meta charset="UTF-8">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone-no">

    <link rel="stylesheet" href='http://fonts.googleapis.com/css?family=Dosis:400,700,500|Nunito:300,400,600' />

    <link rel="stylesheet" href="/css/plugins.css">
    <link rel="stylesheet" href="/css/user_rate.css">

    <link rel="stylesheet" href="/css/jquery.flipster.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Vollkorn:ital,wght@1,500&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <link rel="stylesheet" href="/css/index.css">

    <style>
        input[type="submit"] {
            background-color: rgb(12, 128, 243) !important;
        }

        input[type="submit"]:hover {
            background-color: rgb(243, 183, 12) !important;
        }

        .navButton:hover {
            color: white;
        }
    </style>

</head>

<body>

    <div id="container" style="height: 150px;">
        <img id="collapse" onclick="toggle()"
            style="width: 4rem; margin: 1rem 1rem; position: fixed; right: 0.5rem; top: 0.5rem;z-index: 1000; cursor: pointer; border-radius: 6px;"
            src="../assets/img/hamburger.png" alt="">
        <div id="nav">
            <div id="navbar">
                <a href="#" class="navLink">
                    <div class="navButton" onclick="navClick()">
                        SEARCH MOVIES
                    </div>
                </a>
                <div class="navHead" style="margin-top: 0.5rem;">
                    PROFILE
                </div>
                <div id="profile">
                    <div id="profilePicture">
                        <img src="../assets/img/profile.png" alt="">
                    </div>
                    <a href="<%=path%>user/userfavourite" class="navLink">
                        <div class="navButton" onclick="navClick()">
                            MY FAVOURITES
                        </div>
                    </a>
                    <a href="#" class="navLink" onclick="navClick()">
                        <div class="navButton">
                            MY RATINGS
                        </div>
                    </a>
                    <a href="#" class="navLink" onclick="navClick()">
                        <div class="navButton">
                            MY REVIEWS
                        </div>
                    </a>
                    <a href="<%=path%>auth/logout" class="navLink" onclick="navClick()">
                        <div class="navButton">
                            LOG OUT
                        </div>
                    </a>
                </div>
                <!-- <div class="navHead">
                    GENRES
                </div>
                <div id="genre"></div> -->
            </div>
        </div>

        <div id="main">
            <div id="title">
                <div id="logoCont" style="margin-top: 1rem; margin-left: 1.2rem;">
                    <img src="/assets/img/logo.png" alt="" id="logo">
                </div>
                <div id="type"></div>
            </div>
        </div>

    </div>


    <div class="hero user-hero" style="height: 0%; ">
        <div class="col-md-12" style="margin-top: 70px; background-color: rgb(16, 16, 41) !important">
            <h1>My Rating and Review</h1>
        </div>
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12" style="width: 60%; margin-top: 90px; position: relative; left: 20%;">
        <div class="sidebar">
            <div class="searh-form">
                <!-- <h4 class="sb-title">Search for movie</h4> -->
                <form class="form-style-1" action="#">
                    <div class="row">
                        <div class="col-md-12 form-it">
                            <label>Search Movie</label>
                            <input onkeyup="searchName()" type="text" id="search" placeholder="Enter Movie Name">
                        </div>
                        <div class="col-md-12 " style="width: 54%; position: relative; left: 23%; ">
                            <input class="submit" type="submit" value="submit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="page-single" style="background-color: rgb(16, 16, 41) !important">
        <div class="container">
            <div class="row ipad-width2">

                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="topbar-filter">
                    </div>
                    <%data.forEach(item =>{%>

                    <div class="movie movie-item-style-2 userrate">
                        <img src="https://image.tmdb.org/t/p/w500<%=item.poster%>" alt="">
                        <div class="mv-item-infor">
                            <h6><a class="moviename" href="<%=path%>moviedetails?id=<%=item.movieid%>"> <%=item.name%> </a></h6>
                            <p class="time sm-text">your rate : <%=item.userrating%>/10</p><br>
                            <p class="rate"><i class="ion-android-star"></i><span><%=item.rating%></span> /10</p>
                            <p class="time sm-text">your reviews :</p><br>
                            <h6><%=item.title%></h6>
                            <!-- <p class="time sm">02 April 2017</p> -->
                            <p><%=item.text%></p>
                        </div>
                    </div>
                    <%})%>

                    <!-- <div class="topbar-filter">
                        <label>Movies per page :</label>
                        <div class="pagination2">
                            <span>Page 1 of 1:</span>
                            <a class="active" href="#">1</a>
                            <a href="#"><i class="ion-arrow-right-b"></i></a>
                        </div>
                    </div> -->

                </div>
            </div>
        </div>
    </div>
    <script>
        function searchName() {
            var mess = (document.getElementById('search').value);
            mess=mess.toUpperCase();
            if (mess != '') {
                var i = 0;
                while (document.getElementsByClassName('movie')[i]) {
                    // console.log(document.getElementsByClassName('friendname')[i].innerHTML, document.getElementsByClassName('friendname')[i].innerHTML.indexOf(mess));
                    if (document.getElementsByClassName('moviename')[i].innerHTML.toUpperCase().indexOf(mess) != -1 ) {
                        document.getElementsByClassName('movie')[i].style.display = '';

                    }
                    else {
                        document.getElementsByClassName('movie')[i].style.display = 'none';
                    }
                    i = i + 1;
                }
            }
            else {
                var i = 0;
                while (document.getElementsByClassName('moviename')[i]) {
                    document.getElementsByClassName('movie')[i].style.display = '';

                    i = i + 1;
                }
            }
        }
    </script>
    <script src="/js/jquery.js"></script>
    <script src="/js/plugins.js"></script>
    <script src="/js/plugins2.js"></script>
    <script src="/js/custom.js"></script>
</body>


<script>
    var smallWidth, defaultCollapse = 1;
    if (screen.width < 900) {
        smallWidth = 1;
    } else {
        smallWidth = 0;
    }

    function toggle() {
        if (smallWidth) {
            if (defaultCollapse) {
                document.getElementById("navbar").style.display = "flex";
                document.getElementById("navbar").style.position = "fixed";
                document.getElementById("navbar").style.width = "60vw";
                defaultCollapse = 0;
            } else {
                document.getElementById("navbar").style.display = "none";
                defaultCollapse = 1;
            }
        } else {
            if (defaultCollapse) {
                document.getElementById("navbar").style.display = "flex";
                defaultCollapse = 0;
            } else {
                document.getElementById("navbar").style.display = "none";
                defaultCollapse = 1;
            }
        }
    }

    function navClick() {
        if (screen.width < 900)
            toggle();
    }
</script>

</html>