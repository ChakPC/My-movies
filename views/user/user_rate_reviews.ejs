                document.getElementById("navbar").style.display = "flex";
                document.getElementById("navbar").style.position = "fixed";
                document.getElementById("navbar").style.width = "60vw";
                defaultCollapse = 0;
            } else {
                document.getElementById("navbar").style.display = "none";
                defaultCollapse = 1;
            }
        } else {
            if (defaultCollapse) {
                document.getElementById("navbar").style.display = "flex";
                defaultCollapse = 0;
            } else {
                document.getElementById("navbar").style.display = "none";
                defaultCollapse = 1;
            }
        }
    }

    function navClick() {
        if (screen.width < 900)
            toggle();
    }
