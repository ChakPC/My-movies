        <script>
            // Change background movie

            function loadMovieBG(){
                let randomIndex = Math.floor(Math.random()*movieBG.length);
                console.log(movieBG[randomIndex]);
                document.getElementById("movieBG").childNodes[1].src = movieBG[randomIndex];
